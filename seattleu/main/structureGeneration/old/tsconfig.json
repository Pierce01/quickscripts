  "compilerOptions": {
    "resolvePackageJsonImports": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "lib": ["es2022", "dom"],
    "target": "es2022",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "nodenext"
  },
  "exclude": ["cjs", "esm"]
}